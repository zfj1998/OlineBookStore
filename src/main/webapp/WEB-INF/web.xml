<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
          http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">



    <listener>
        <listener-class>controller.SQLConnectListner</listener-class>
    </listener>

    <servlet>
        <servlet-name>LoginAndRegister</servlet-name>
        <servlet-class>controller.LoginAndRegisterServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginAndRegister</servlet-name>
        <url-pattern>/loginAndRegister</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>initial</servlet-name>
        <servlet-class>controller.InitServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>initial</servlet-name>
        <url-pattern>/init</url-pattern>
    </servlet-mapping>
</web-app>