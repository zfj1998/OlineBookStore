<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="operations.AccountDAO">

    <resultMap id="loginResultMap" type="basis.Account">
        <result property="userId" column="id"/>
        <result property="userName" column="name"/>
        <result property="tel" column="phone"/>
        <result property="password" column="password"/>
    </resultMap>

    <select id="login" resultMap="loginResultMap">
        SELECT * FROM user
        <where>
            id = '${userId}'
            AND  password = '${password}'
        </where>
    </select>

    <insert id="register">
        insert into user value (#{userId},#{userName},'0',#{phone},#{password});
    </insert>
</mapper>