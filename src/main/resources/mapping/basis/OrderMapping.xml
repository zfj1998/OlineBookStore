<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="operations.basis.OrderOperations">

    <resultMap id="OrderMap" type="basis.Order">
        <!--TODO:在这里修改数据库定义-->
        <result property="orderId" column="id"/>
        <result property="userId" column="status"/>
        <result property="orderDate" column="permission"/>
        <result property="addressId" column="userName"/>
        <result property="status" column="password"/>
        <result property="totalPrice" column="tel"/>
        <result property="totalItem" column="email"/>
    </resultMap>

    <select id="getOrderById" resultMap="OrderMap">
        SELECT * FROM "Order"
        <where>
            orderId = '${orderId}'
        </where>
    </select>
</mapper>