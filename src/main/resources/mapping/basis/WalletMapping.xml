<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="operations.basis.WalletOperations">

    <resultMap id="WalletMap" type="basis.Wallet">
        <!--TODO:在这里修改数据库定义-->
        <result property="walletId" column="id"/>
        <result property="userId" column="status"/>
        <result property="password" column="permission"/>
        <result property="balance" column="userName"/>
    </resultMap>

    <select id="getWalletById" resultMap="WalletMap">
        SELECT * FROM Wallet
        <where>
            walletId = '${walletId}'
        </where>
    </select>
</mapper>