<mapper namespace="operations.basis.ExchangeOperations">
    <resultMap id="ExchangeMap" type="basis.Exchange">
        <!--TODO:在这里修改数据库定义-->
        <result property="exchangeId" column="id"/>
        <result property="orderId" column="status"/>
        <result property="itemId" column="permission"/>
        <result property="newItemId" column="userName"/>
        <result property="applyDate" column="password"/>
        <result property="status" column="tel"/>
    </resultMap>

    <select id="getExchangeById" resultMap="ExchangeMap">
        SELECT * FROM Exchange
        <where>
            exchangeId = '${exchangeId}'
        </where>
    </select>
