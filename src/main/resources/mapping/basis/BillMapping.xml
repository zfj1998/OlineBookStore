<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="operations.basis.BillOperations">

    <resultMap id="BillMap" type="basis.Bill">
        <!--TODO:在这里修改数据库定义-->
        <result property="billId" column="id"/>
        <result property="walletId" column="walletId"/>
        <result property="orderId" column="orderId"/>
        <result property="refundId" column="refundId"/>
        <result property="rechargeId" column="rechargeId"/>
    </resultMap>

    <select id="getBillById" resultMap="BillMap">
        SELECT * FROM Bill
        <where>
            billId = '${billId}'
        </where>
    </select>

    <insert id="insertBill">
        insert into user value (#{billId},#{walletId},#{orderId},#{refundId},#{rechargeId});
    </insert>
</mapper>