<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="operations.basis.AddressOperations">

    <resultMap id="AddressMap" type="basis.Address">
        <!--TODO:在这里修改数据库定义-->
        <result property="addressId" column="id"/>
        <result property="userId" column="userId"/>
        <result property="realName" column="realName"/>
        <result property="tel" column="tel"/>
        <result property="email" column="email"/>
    </resultMap>

    <select id="getAddressById" resultMap="AddressMap">
        SELECT * FROM Address
        <where>
            addressId = '${addressId}'
        </where>
    </select>

    <insert id="insertAddress">
        insert into user value (#{addressId},#{userId},#{realName},#{tel},#{email});
    </insert>
</mapper>