<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="operations.basis.BookItemOperations">

    <resultMap id="BookItemMap" type="basis.BookItem">
        <!--TODO:在这里修改数据库定义-->
        <result property="itemId" column="id"/>
        <result property="bookId" column="bookId"/>
        <result property="status" column="name"/>
        <result property="price" column="price"/>
        <result property="discount" column="discount"/>
    </resultMap>

    <select id="getBookItemById" resultMap="BookItemMap">
        SELECT * FROM BookItem
        <where>
            itemId = '${itemId}'
        </where>
    </select>
</mapper>