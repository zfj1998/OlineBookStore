<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="operations.basis.ShopCartOperations">

    <resultMap id="ShopCartMap" type="basis.ShopCart">
        <!--TODO:在这里修改数据库定义-->
        <result property="cartId" column="id"/>
        <result property="userId" column="status"/>
        <result property="totalPrice" column="permission"/>
        <result property="totalItem" column="userName"/>
    </resultMap>

    <select id="getShopCartById" resultMap="ShopCartMap">
        SELECT * FROM ShopCart
        <where>
            cartId = '${cartId}'
        </where>
    </select>
</mapper>