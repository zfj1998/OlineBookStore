<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="operations.basis.AccountOperations">

    <resultMap id="AccountMap" type="basis.Account">
        <!--TODO:在这里修改数据库定义-->
        <result property="userId" column="id"/>
        <result property="status" column="status"/>
        <result property="permission" column="permission"/>
        <result property="userName" column="userName"/>
        <result property="password" column="password"/>
        <result property="tel" column="tel"/>
        <result property="email" column="email"/>
    </resultMap>

    <select id="getAccountById" resultMap="AccountMap">
        SELECT * FROM Account
        <where>
            userId = '${userId}'
        </where>
    </select>

    <select id="login" resultMap="AccountMap">
        SELECT * FROM user
        <where>
            id = '${userId}'
            AND  password = '${password}'
        </where>
    </select>

    <insert id="register">
        insert into user value (#{userId},#{userName},'0',#{phone},#{password});
    </insert>
</mapper>